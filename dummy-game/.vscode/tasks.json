{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"isBackground": true,
			"label": "dummy-game: run server"
		},
		{
			"type": "process",
			"command":"wasm-pack",
			"args": ["build", "--target", "web"],
			"group": "build",
			"label": "dummy-game: build client"
		},
		{
			"type": "process",
			"command":"basic-http-server",
			"isBackground": true,
			"group": "build",
			"label": "dummy-game: serve client"
		}
	]
}